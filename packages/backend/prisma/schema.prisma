// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id          String       @id @default(uuid())
  url         String
  title       String
  slug        String       @unique
  description String
  iconUrl     String?
  keywords    String[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  collections Collection[]
  Submission  Submission[]
  visits      Visit[]
  favoritedBy User[]
}

model Visit {
  id        String   @id @default(uuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id])
  timeStamp DateTime @default(now())
}

model Collection {
  id        String   @id @default(uuid())
  iconUrl   String
  bannerUrl String
  slug      String
  name      String
  links     Link[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  createdBy User     @relation(fields: [userId], references: [id])
}

model User {
  id          String       @id
  firstName   String
  fullName    String
  email       String
  role        UserRole     @default(USER)
  submissions Submission[]
  collections Collection[]
  favorites   Link[]
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

model Submission {
  id           String            @id @default(uuid())
  oldLink      Link?             @relation(fields: [oldLinkId], references: [id])
  oldLinkId    String?
  title        String
  url          String
  slug         String
  description  String
  iconUrl      String?
  keywords     String[]
  status       SUBMISSION_STATUS
  adminComment String?
  userId       String
  createdBy    User              @relation(fields: [userId], references: [id])
}

enum SUBMISSION_STATUS {
  IN_REVIEW
  APPROVED
  DECLINED
}
