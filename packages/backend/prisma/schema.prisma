// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id          String   @id @default(uuid())
  url         String
  title       String
  slug        String   @unique
  description String
  iconUrl     String?
  keywords    String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Collection {
  id        String   @id @default(uuid())
  links     Link[]
  iconUrl   String
  bannerUrl String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(uuid())
}

model Submission {
  id String @id @default(uuid())
}
