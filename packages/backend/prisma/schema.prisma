// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Link {
  id          String   @id @default(uuid())
  url         String
  title       String
  slug        String   @unique
  description String
  iconUrl     String?
  keywords    String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  collections Collection[]
    Submission Submission[]
}

model Collection {
  id        String   @id @default(uuid())
  links     Link[]
  iconUrl   String
  bannerUrl String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(uuid())
}

model Submission {
    id           String             @id @default(uuid())
    old_link     Link?              @relation(fields: [linkId], references: [id])
    linkId       String?
    linkName     String
    description  String
    status       Submission_Status
    adminComment String
}

enum Submission_Status {
    IN_REVIEW
    APPROVED
    DECLINED
}
